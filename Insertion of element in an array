#include <iostream>
using namespace std;

void insertion(int arr[], int n, int x, int pos)
{
    for(int i=n-1; i>=pos;i--)
    {
        arr[i+1] = arr[i]; //right shift
    }
    arr[pos] = x;
}
int main()
{
    int arr[10] = {10,20,40,50};
    int n = sizeof(arr)/sizeof(arr[0]);
    int x = 30; //no. to be inserted
    int pos = 2;
    insertion(arr,n,x,pos);
    
    for(int i=0; i<n;i++)
    {
        cout << arr[i] << " ";
    }

    return 0;
}
